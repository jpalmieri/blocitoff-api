<h2>New Todo</h2>
<%= form_for @todo, :html => {:class => "form-horizontal center"} do |form| %>
  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Description</label>
    <div class="col-md-8">
      <%= form.text_field :description, autofocus: true, placeholder: 'Description', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-2">
      <%= form.submit 'Save', class: 'btn btn-success', data: { :"todo-id" => @todo.id, :"create-todo-button" => true } %>
    </div>
  </div>
<% end %>